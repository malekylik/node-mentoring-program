{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noEmit": true,
    "strict": true,
    "baseUrl": "./node_modules"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}